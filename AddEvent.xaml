<Window x:Class="ReadWriteRFID.AddEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Attendance Monitoring System" Height="300" Width="300">
    <Grid Background="#FF4DB3EE">
        <TextBox x:Name="txtEvent" HorizontalAlignment="Left" Height="23" Margin="117,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblEvent" Content="Add an Event:" HorizontalAlignment="Left" Margin="27,93,0,0" VerticalAlignment="Top" Width="85" FontWeight="Bold"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="139,128,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click" Height="34" Background="#FF19283F" Foreground="#FFF5F3F3"/>
        <Button x:Name="btnHome" Content="Home" HorizontalAlignment="Left" Margin="139,167,0,0" VerticalAlignment="Top" Width="75" Click="btnHome_Click" Height="35" Background="#FF19283F" Foreground="#FFF7F2F2"/>

    </Grid>
</Window>
